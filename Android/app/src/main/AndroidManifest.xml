<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/carapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/carapp_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarApp"
        tools:targetApi="31">
        <activity
            android:name=".CarApp.activity.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CarApp.activity.CarDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".CarApp.activity.EditCarActivity"
            android:exported="false" />
        <activity
            android:name=".CarApp.activity.AddCarActivity"
            android:exported="false" />
        <activity
            android:name=".CarApp.activity.LoginActivity"
            android:exported="false"/>

        <activity
            android:name=".CarApp.activity.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".CarApp.activity.MainActivity"
            android:exported="false" />
    </application>

</manifest>