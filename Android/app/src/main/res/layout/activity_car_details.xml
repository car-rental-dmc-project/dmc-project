<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CarApp.activity.CarDetailsActivity">

    <ImageView
        android:id="@+id/acd_bluecar"
        android:layout_gravity="center"
        android:src="@drawable/blue_car"
        android:layout_width="150dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/acd_modelname"
        android:layout_marginTop="10dp"
        android:text="Model Name :"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/acd_purchaseyear"
        android:layout_marginTop="10dp"
        android:text="Purchase Year:"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/acd_costperhour"
        android:layout_marginTop="10dp"
        android:text="Cost Per Hour :"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/acd_fueltype"
        android:layout_marginTop="10dp"
        android:text="Fuel Type :"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/acd_transmission"
        android:layout_marginTop="10dp"
        android:text="Transmission :"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/acd_kmsdriven"
        android:layout_marginTop="10dp"
        android:text="Kms Driven :"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/acd_mileage"
        android:layout_marginTop="10dp"
        android:text="Mileage :"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/acd_insurance"
        android:layout_marginTop="10dp"
        android:text="Insurance :"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>