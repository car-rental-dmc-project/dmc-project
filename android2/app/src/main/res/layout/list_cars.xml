<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/carView"
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:id="@+id/imgCar"
                android:src="@drawable/car3"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imgCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model Name "
                android:id="@+id/carModel"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:id="@+id/year"
                android:layout_toRightOf="@+id/carModel"/>

            <TextView
                android:layout_centerVertical="true"
                android:textSize="13dp"
                android:id="@+id/trans"
                android:layout_toRightOf="@+id/imgCar"
                android:layout_below="@+id/carModel"
                android:text="Transmission *"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_centerVertical="true"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Fuel *"
                android:layout_below="@+id/carModel"
                android:id="@+id/fuel"
                android:layout_toRightOf="@+id/trans"/>

            <TextView
                android:layout_centerVertical="true"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Seater"
                android:id="@+id/seats"
                android:layout_below="@+id/carModel"
                android:layout_toRightOf="@+id/fuel"/>

            <Button
                android:textSize="14dp"
                android:onClick="book"
                android:backgroundTint="#86069C"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="book"
                android:layout_centerVertical="true"
                android:id="@+id/btnBook"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>